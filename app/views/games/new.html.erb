<div class="container">
  <h1>New game</h1>
  <%# display each letter %>
  <% @letters.each do |letter| %>
    <span class="badge bg-secondary"><%= letter %></span>
  <% end %>

  <p> What is the longest word you can find?</p>

  <form action="/score" method="post" data-turbo="false">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
     <%= hidden_field_tag :letters, @letters.join(" ") %>
    <div class="input-group mb-3">
      <input type="text" name="word" class="form-control" aria-describedby="button-addon2">
        <div class="input-group-append">
          <button type="submit" class="btn btn-primary">Play</button>
        </div>
    </div>
  </form>
</div>
